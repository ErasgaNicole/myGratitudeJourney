<?xml version="1.0" encoding="utf-8"?>

<!--// MAIN PARENT CONTAINER-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notesContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e3"
    >

    <!--    SECOND PARENT CONTAINER-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Level 1"
                    android:background="@color/black"
                    android:fontFamily="@font/nexaheavy"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--         HEADER 1  -->
            <TextView

                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFLECTING &amp; APPRECIATING"
                android:background="#0c00ff"
                android:fontFamily="@font/nexaheavy"
                android:textSize="21sp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:textColor="@color/white">
            </TextView>

            <!--            QUESTION 1-->
            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHAT WOULD YOU BE SAD ABOUT IF IT WAS MISSING FROM YOUR LIFE?"
                android:background="#0c00ff"
                android:fontFamily="@font/nexaheavy"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white">
            </TextView>

            <!--            DATE-->
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:background="#a60000"
                android:fontFamily="@font/nexaheavy"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>



